<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/light_blue_background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/blender_logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_blender_24"
        android:layout_marginTop="@dimen/blender_logo_margin_top"
        android:layout_marginLeft="@dimen/margin_left"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="@dimen/app_title_margin_top"
        android:text="@string/title_page_name"
        android:textColor="@color/white"
        android:textSize="@dimen/large_font_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blender_logo_image" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_account_button"
        android:layout_width="@dimen/create_account_button_width"
        app:layout_constraintWidth_percent=".81"
        android:layout_height="wrap_content"
        android:text="@string/create_account_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_title"
        android:layout_marginTop="@dimen/create_account_button_margin_top"
        app:cornerRadius="@dimen/create_account_button_corner"
        app:strokeColor="@color/white"
        app:strokeWidth="@dimen/create_account_button_stroke_width"
        android:backgroundTint="@color/light_blue_background"/>


</androidx.constraintlayout.widget.ConstraintLayout>